@using ManiacProject.Libs
@using ManiacProject.Views.Classes
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
      <meta http-equiv="x-ua-compatible" content="IE=8" >
<html>
    <head>
        <script type="text/javascript">
            function AutoRefresh(t) {
                setTimeout("location.reload(true);", t);
            }
        </script>
        <title>@ViewBag.Title</title>
        
        @*<link href="@Url.Content("~/Content/MenuItem.css")" rel="stylesheet" type="text/css" />*@
        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
        @RenderSection("JavaScriptAndCSS", required: false)
    </head>

<body onload="JavaScript:AutoRefresh(1000*60*19);">
   
    <div>
        <div>
            <div style="width: 100%; height: 80px; background-color: LightSlateGray;">
        
            @Html.Raw(TemplateItems.GetWelcomeStringView())

            @Html.Raw(TemplateItems.GetHeaderLogInView(Session))
      
            </div>
            <div>
                @*@Html.Raw(MenuItems.GetMenuItems(Session))*@
                @{
                    if (Session.Count != 0)
                    {
                    string url = UtilityLibrary.GetBaseURL() + "Account/Logout";
                        <a style="text-align: right;" href="@url "> Log out </a>
                    }   
                
                 }
                
            </div>
            <div>
                @RenderBody()
            </div>
            <div style="width: 100%; height: 80px; background-color: LightSlateGray;">
            </div>
        </div>
    </div>

</body>
</html>
